# =============================================================================
# Environment Variables Template for Multi-Agentic RAG Interview System
# =============================================================================
# Copy this file to .env and fill in your actual values
# Never commit .env to version control!

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
DATABASE_URL=postgresql://interview_user:your_secure_password@postgres_db:5432/interview_db

# For local development (outside Docker):
# DATABASE_URL=postgresql://interview_user:your_secure_password@localhost:5432/interview_db

# -----------------------------------------------------------------------------
# Authentication & Security
# -----------------------------------------------------------------------------
# Generate a secure secret key: openssl rand -hex 32
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# -----------------------------------------------------------------------------
# Google AI (Gemini)
# -----------------------------------------------------------------------------
# Get your API key from: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=your-google-api-key-here

# -----------------------------------------------------------------------------
# Pinecone (Vector Database)
# -----------------------------------------------------------------------------
# Get your API key from: https://app.pinecone.io/
PINECONE_API_KEY=your-pinecone-api-key-here
PINECONE_ENVIRONMENT=your-pinecone-environment
PINECONE_INDEX_NAME=interview-questions

# -----------------------------------------------------------------------------
# Cloudinary (File Storage)
# -----------------------------------------------------------------------------
# Get your credentials from: https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret
# Or use the full URL format:
# CLOUDINARY_URL=cloudinary://api_key:api_secret@cloud_name

# -----------------------------------------------------------------------------
# Redis (Caching)
# -----------------------------------------------------------------------------
REDIS_URL=redis://redis:6379/0

# For local development (outside Docker):
# REDIS_URL=redis://localhost:6379/0

# -----------------------------------------------------------------------------
# Application Configuration
# -----------------------------------------------------------------------------
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost

# -----------------------------------------------------------------------------
# LangSmith (Optional - for LangChain debugging)
# -----------------------------------------------------------------------------
# LANGCHAIN_TRACING_V2=true
# LANGCHAIN_API_KEY=your-langsmith-api-key
# LANGCHAIN_PROJECT=interview-system